@using MVC.Data.ViewModels
@model LoginVM;

@{
    ViewData["Title"] = "Log in to account";
    Layout="~/Views/Shared/_Layout.cshtml";
}



<div class="inner_page-banner one-img"></div>
<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a >@Html.ActionLink("Home", "Index", "Home")</a>
                  <span>/ /</span>
               </li>
               <li>Login</li>
            </ul>
    </div>
</div>



<div class="row">
    <div class="col-md-4 offset-2">
        

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            
            <div class="col-md-12 offset-6">
                <br />
                <p>
            <h2>Log In</h2>
        </p>
         <br />
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="border-radius: 50px 50px">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="border-radius: 50px 50px">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Log in" style="border-radius: 50px 50px"/>
                        <a class="btn btn-outline-secondary" asp-controller="Toys" asp-action="Index" style="border-radius: 50px 50px">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>