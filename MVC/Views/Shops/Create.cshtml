@model Shops 

@{ 
    ViewData["Title"] = "Add a Shop";
} 


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a Shop</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>




                    <div class="form-group text-center">
                        <img id="ShopImageURLPreview" height="200" width="200" style="padding: 10px 10px 10px 10px; position: relative; right: 5px; border-radius: 100px;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ShopImageURL" class="control-label"></label>
                        <input asp-for="ShopImageURL" class="form-control" />
                        <span asp-validation-for="ShopImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc" class="control-label"></label>
                        <input asp-for="Desc" class="form-control" />
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Shops" asp-action="Index"> Show Shops</a>

                    </div>
                </form>
            </div>
        </div>
        </div>

</div>


@section Scripts{ 
    <script>

        $(document).ready(function() {
            var output = document.getElementById("ShopImageURLPreview");
            output.src = $("ShopImageURL").val();
        })
        $("#ShopImageURL").on("change", function () {
            var output = document.getElementById("ShopImageURLPreview");
            output.src = $(this).val();
        })
    </script>
}