@model Shops

@{
    ViewData["Title"] = "Add a Shop";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@Model.FullName Details </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                    




                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" stlye="max-width: 150px" id="ShopImageURLPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ShopImageURL" class="control-label"></label>
                        <input asp-for="ShopImageURL" class="form-control" readonly/>
                        <span asp-validation-for="ShopImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc" class="control-label"></label>
                        <input asp-for="Desc" class="form-control" readonly/>
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {

                            <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

                        }
                        <a class="btn btn-outline-secondary" asp-controller="Shops" asp-action="Index"> Show Authors</a>
                    </div>
                
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script>

        $(document).ready(function() {
            var output = document.getElementById("ProfilePictureURLPreview");
            output.src = $("ProfilePictureURL").val();
        })
       
    </script>
}