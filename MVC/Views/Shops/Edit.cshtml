@model Shops

@{
    ViewData["Title"] = "Update Author";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>




                    <div class="form-group text-center">
                        <img id="ProfilePictureURLPreview" class="border-info rounded-circle" stlye="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ShopImageURL" class="control-label"></label>
                        <input asp-for="ShopImageURL" class="form-control" />
                        <span asp-validation-for="ShopImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc" class="control-label"></label>
                        <input asp-for="Desc" class="form-control" />
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Authors" asp-action="Index"> Show Authors</a>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script>

        $(document).ready(function() {
            var output = document.getElementById("ProfilePictureURLPreview");
            output.src = $("ProfilePictureURL").val();
        })
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById("ProfilePictureURLPreview");
            output.src = $(this).val();
        })
    </script>
}