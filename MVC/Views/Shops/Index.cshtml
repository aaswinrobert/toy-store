<!--Defining the model-->
@model IEnumerable<Shops>
<!--Defining the vie data-->


@{
    ViewData["Title"] = "List of Shops";
}


<div class="inner_page-banner one-img">
      </div>
      <!--//banner -->
      <!-- short -->
      <div class="using-border py-3">
         <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a >@Html.ActionLink("Home", "Index", "Home")</a>
                  <span>/ /</span>
               </li>
               <li></li>
            </ul>
         </div>
      </div>
<!--main code-->
<div class="row">

    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead></thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ShopImageURL)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Desc)</th>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <th>Update</th>
                }

            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ShopImageURL" alt="@item.FullName" height="200" width="200" style="padding: 10px 10px 10px 10px; position: relative; right: 5px; border-radius: 100px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Desc)
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Shops" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                                <a class="btn btn-outline-info" asp-controller="Shops" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-pencil-eye"></i>Details</a> |
                                <a class="btn btn-danger text-white" asp-controller="Shops" asp-action="Delete" asp-route-id="@item.Id"><i class="badge-info bi-pencil-trash"></i>Delete</a>
                            </td>
                        }

                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

@await Html.PartialAsync("_PartialViewCreateItem", "Shops")

