@model newToysVM
@using MVC.Models
@using MVC.Data


@{
    ViewData["Title"] = "Add a new toy";
    Layout = "~/Views/Toys/Shopnow_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Add a new toy </h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="ToyName" class="control-label"></label>
                                <input asp-for="ToyName" class="form-control" />
                                <span asp-validation-for="ToyName" class="text-danger"></span>
                            </div>
                           
                            
                            <div class="form-group">
                                <label asp-for="ToyPrice" class="control-label"></label>
                                <input asp-for="ToyPrice" type="number" class="form-control" />
                                <span asp-validation-for="ToyPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ToyImageURL" class="control-label"></label>
                                <input asp-for="ToyImageURL" class="form-control" />
                                <span asp-validation-for="ToyImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            
                            @*<div class="form-group">
                                <label asp-for="ShopIds" class="control-label"></label>
                                <select asp-for="ShopIds" class="form-control" asp-items="ViewBag.ShopIds" multiple></select>
                                <span asp-validation-for="ShopIds" class="text-danger"></span>
                            </div>*@
                            <div class="form-group">
                                <label asp-for="ToyCategory" class="control-label"></label>
                                <select asp-for="ToyCategory" class="form-control" asp-items="Html.GetEnumSelectList<ToyCategory>()" multiple></select>
                                <span asp-validation-for="ToyCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Availability" class="control-label"></label>
                                <select asp-for="Availability" class="form-control" asp-items="Html.GetEnumSelectList<Availability>()" multiple></select>
                                <span asp-validation-for="Availability" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ToyDescription" class="control-label"></label>
                                <textarea asp-for="ToyDescription" class="form-control"></textarea>
                                <span asp-validation-for="ToyDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <img id="ToyImageURLPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}