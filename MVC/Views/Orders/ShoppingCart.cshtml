@using MVC.Data.ViewModels

@model ShoppingCartViewModel


@{
    ViewData["Title"] = "Shopping Cart";
}


 <div class="inner_page-banner one-img">
      </div>
      <!--//banner -->
      <!-- short -->
      <div class="using-border py-3">
         <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a >@Html.ActionLink("Home", "Index", "Home")</a>
                  <span>/ /</span>
               </li>
               <li>Shopping Cart</li>
            </ul>
         </div>
      </div>





       <section class="checkout py-lg-4 py-md-3 py-sm-3 py-3">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
               <div class="shop_inner_inf">
                  <div class="privacy about">
                     <div class="checkout-right">
                        <h4>Your shopping cart contains </h4>
                        <table class="timetable_sub">
                           <thead>
                              <tr>
                                 <th>P Id</th>
                                 <th>Product Image</th>
                                 <th>Quantity</th>
                                 <th>Product Name</th>
                                 <th>Price</th>    
                                 <th>Remove</th>
                              </tr>
                           </thead>
                        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                        {
                             <tbody>
                              <tr class="rem1">
                                 <td class="invert">@item.Toys.Id</td>
                                 <td class="invert-image"><img src="@item.Toys.ToyImageURL" alt=" " class="img-responsive" asp-action="Details" asp-route-id="@item.Toys.Id"></td>
                                 <td class="invert">
                                    <div class="quantity">
                                       <div class="quantity-select">
                                          <div class="entry value-minus">
                                              <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                                                    asp-route-id="@item.Toys.Id">
                                                    <i class="bi bi-cart-dash">&nbsp;</i>
                                              </a>                                            
                                              </div>
                                          <div class="entry value"><span>@item.Amount</span></div>

                                          <div class="entry value-plus active">
                                              <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                                                asp-route-id="@item.Toys.Id">
                                                <i class="bi bi-cart-plus">&nbsp;</i>
                                              </a>
                                              
                                              </div>
                                       </div>
                                    </div>
                                 </td>
                                 <td class="invert">@item.Toys.ToyName</td>
                                 <td class="invert">@item.Toys.ToyPrice.ToString("c") X @item.Amount </td>
                                 <td class="invert">
                                   <div class="rem">
                                       
                                       <a asp-controller="Orders" asp-action="RemoveItemCompleteFromShoppingCart"
                                                    asp-route-id="@item.Toys.Id" style="color:black">X </a>
                                    </div>

                                                                       
                                 </td>
                              </tr>                                                          
                           </tbody>                          
                        }
                        </table>
                     </div>                   
                  </div>
               </div>
               <!-- //top products -->
            </div>
        </section>
  
<div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-primary" asp-action="Checkout" style=" border-radius: 50px 50px">
                        Proceed For CheckOut
                    </a>
                <div id="paypal-btn"></div>
                <span style="padding:5px"></span>
                <a class="btn btn-outline-success" asp-controller="Toys" asp-action="Index" style=" border-radius: 50px 50px">
                    Add more items
                </a>
            </div>
 </div>


 


<!--js working-->
      <script src='js/jquery-2.2.3.min.js'></script>
      <!--//js working-->
      <!-- cart-js -->	
      <script src="js/minicart.js"></script>
      <script>
         toys.render();
         
         toys.cart.on('toys_checkout', function (evt) {
         	var items, len, i;
         
         	if (this.subtotal() > 0) {
         		items = this.items();
         
         		for (i = 0, len = items.length; i < len; i++) {}
         	}
         });
      </script>
      <!--// cart-js -->
      <!--quantity-->
      <script>
         $('.value-plus').on('click', function () {
         	var divUpd = $(this).parent().find('.value'),
         		newVal = parseInt(divUpd.text(), 10) + 1;
         	divUpd.text(newVal);
         });
         
         $('.value-minus').on('click', function () {
         	var divUpd = $(this).parent().find('.value'),
         		newVal = parseInt(divUpd.text(), 10) - 1;
         	if (newVal >= 1) divUpd.text(newVal);
         });
      </script>
